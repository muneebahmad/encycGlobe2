<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FFC0CB"
                android:endColor="#FFC0CB"
                />
            <stroke
                android:color="#ff69b4"
                android:width="1sp"
                />
            <corners
                />

        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#FFC0CB"
                android:endColor="#FFC0CB"
                />
            <stroke
                android:color="#ff69b4"
                android:width="0.5sp"
                />
            <corners
                />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ff69b4"
                android:endColor="#ff69b4"
                />
            <stroke
                android:color="#ffc0cb"
                android:width="1sp"
                />
            <corners
                />

        </shape>
    </item>

</selector>