<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/holiday_inner_layout"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical"
        android:background="@drawable/scrollview_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

            <View
                android:layout_width="0.5sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="#aaaaaa"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_holiday_date"
                android:text="Date"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_margin="2dip"
            android:background="#aaaaaa"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:text="Holiday"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

            <View
                android:layout_width="0.5sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="#aaaaaa"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_holiday_holiday"
                android:text="Holiday"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

            <View
                android:layout_width="0.5sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="#aaaaaa"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_holiday_type"
                android:text="Type"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_margin="2dip"
            android:background="#aaaaaa"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

            <View
                android:layout_width="0.5sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:background="#aaaaaa"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_holiday_comments"
                android:text="Comments"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_margin="5sp"
                />

        </LinearLayout>

        </LinearLayout>


</LinearLayout>